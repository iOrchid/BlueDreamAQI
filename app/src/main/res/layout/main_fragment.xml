<?xml version="1.0" encoding="utf-8"?>
<layout>

	<data>

		<import type="org.zhiwei.aqi.utils.BindUtils" />

		<variable
				name="vm"
				type="org.zhiwei.aqi.ui.main.MainViewModel" />

		<variable
				name="adapter"
				type="androidx.recyclerview.widget.RecyclerView.Adapter" />
	</data>

	<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			xmlns:tools="http://schemas.android.com/tools"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:fitsSystemWindows="true">

		<com.google.android.material.appbar.AppBarLayout
				android:id="@+id/appbar_main"
				android:layout_width="match_parent"
				android:layout_height="278dp"
				android:animateLayoutChanges="true"
				android:background="?attr/colorSurface"
				android:fitsSystemWindows="true"
				android:stateListAnimator="@animator/show_toolbar"
				android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar">

			<com.google.android.material.appbar.CollapsingToolbarLayout
					android:id="@+id/toolbar_layout"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:fitsSystemWindows="true"
					app:collapsedTitleGravity="center"
					app:collapsedTitleTextAppearance="@style/TextAppearance.AQI.Toolbar.Text"
					app:contentScrim="?attr/colorPrimary"
					app:layout_scrollFlags="scroll|exitUntilCollapsed"
					app:statusBarScrim="?attr/colorPrimaryDark"
					app:title="北京"
					app:titleEnabled="false"
					app:toolbarId="@id/toolbar_main">

				<androidx.constraintlayout.widget.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:fitsSystemWindows="true"
						app:layout_collapseMode="parallax"
						tools:context=".ui.main.MainFragment">

					<androidx.appcompat.widget.AppCompatImageView
							android:id="@+id/iv_bg_main"
							android:layout_width="match_parent"
							android:layout_height="278dp"
							android:fitsSystemWindows="true"
							android:scaleType="centerCrop"
							android:src="@drawable/grass"
							app:layout_constraintTop_toTopOf="parent" />

					<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/tv_city_main"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="15dp"
							android:layout_marginTop="40dp"
							android:text="@{vm.liveAQI.city}"
							android:textColor="@color/colorWhite"
							android:textSize="22sp"
							app:layout_constraintStart_toStartOf="@id/iv_bg_main"
							app:layout_constraintTop_toTopOf="@id/iv_bg_main"
							tools:text="北京" />

					<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/tv_update_time_main"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="10dp"
							android:layout_marginTop="15dp"
							android:alpha="0.7"
							android:drawableStart="@drawable/ic_refresh"
							android:drawablePadding="5dp"
							android:text="@{@string/str_latest_update(vm.liveAQI.lastUpdateTime)}"
							android:textColor="@color/colorWhite"
							app:layout_constraintBaseline_toBaselineOf="@id/tv_city_main"
							app:layout_constraintStart_toEndOf="@id/tv_city_main"
							tools:text="最后更新时间 26日 11:00" />

					<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/tv_aqi_num_main"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@{``+vm.liveAQI.aqi}"
							android:textColor="@color/colorWhite"
							android:textSize="65sp"
							app:layout_constraintStart_toStartOf="@id/tv_city_main"
							app:layout_constraintTop_toBottomOf="@id/tv_city_main"
							tools:text="28" />

					<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/tv_air_quality_main"
							android:layout_width="30dp"
							android:layout_height="20dp"
							android:layout_marginStart="15dp"
							android:layout_marginBottom="5dp"
							android:background="@{BindUtils.aqiLevelRes(vm.liveAQI.aqi),default=@drawable/shape_air_good}"
							android:gravity="center"
							android:text="@{BindUtils.aqiLevelStr(vm.liveAQI.aqi)}"
							android:textColor="@color/colorWhite"
							android:textSize="12sp"
							app:layout_constraintBottom_toTopOf="@id/tv_quality_main"
							app:layout_constraintStart_toEndOf="@id/tv_aqi_num_main"
							tools:text="优" />

					<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/tv_quality_main"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="AQI指数"
							android:textColor="@color/colorWhite"
							android:textSize="14sp"
							app:layout_constraintBaseline_toBaselineOf="@id/tv_aqi_num_main"
							app:layout_constraintStart_toStartOf="@id/tv_air_quality_main"
							app:layout_constraintTop_toBottomOf="@id/tv_air_quality_main" />

					<View
							android:id="@+id/v_line_main"
							android:layout_width="0dp"
							android:layout_height="0.5dp"
							android:background="@color/colorWhite"
							app:layout_constraintEnd_toEndOf="@id/tv_update_time_main"
							app:layout_constraintStart_toStartOf="@id/tv_city_main"
							app:layout_constraintTop_toBottomOf="@id/tv_aqi_num_main" />

					<androidx.appcompat.widget.AppCompatTextView
							android:id="@+id/tv_aqi_desc_main"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@{@string/str_pm2_concentration(vm.liveAQI.pm2)}"
							android:textColor="@color/colorWhite"
							app:layout_constraintStart_toStartOf="@id/v_line_main"
							app:layout_constraintTop_toBottomOf="@id/v_line_main"
							tools:text="PM2.5当前浓度:8微克/立方米" />

					<com.google.android.material.button.MaterialButton
							android:id="@+id/tv_share_main"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginEnd="15dp"
							android:layout_marginBottom="15dp"
							android:backgroundTint="@color/colorBlackAlpha"
							android:drawableEnd="@drawable/ic_share"
							android:gravity="center"
							android:text="分享"
							android:textColor="@color/colorWhite"
							android:textSize="14sp"
							app:cornerRadius="20dp"
							app:layout_constraintBottom_toTopOf="@id/v_bg_bar_main"
							app:layout_constraintEnd_toEndOf="@id/iv_bg_main" />

					<View
							android:id="@+id/v_bg_bar_main"
							android:layout_width="match_parent"
							android:layout_height="40dp"
							android:alpha="0.3"
							android:background="@color/colorWhite"
							app:layout_constraintBottom_toBottomOf="@id/iv_bg_main" />


					<androidx.appcompat.widget.AppCompatSeekBar
							android:id="@+id/seek_main"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:progress="30"
							app:layout_constraintBottom_toBottomOf="@id/v_bg_bar_main"
							app:layout_constraintTop_toTopOf="@id/v_bg_bar_main" />

				</androidx.constraintlayout.widget.ConstraintLayout>

				<androidx.appcompat.widget.Toolbar
						android:id="@+id/toolbar_main"
						android:layout_width="match_parent"
						android:layout_height="?attr/actionBarSize"
						android:background="@android:color/transparent"
						app:contentInsetStartWithNavigation="0dp"
						app:layout_collapseMode="pin"
						app:menu="@menu/menu_main"
						app:titleTextColor="?attr/colorOnSurface" />

			</com.google.android.material.appbar.CollapsingToolbarLayout>
		</com.google.android.material.appbar.AppBarLayout>

		<androidx.core.widget.NestedScrollView
				android:id="@+id/scrollview_main"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:clipToPadding="false"
				android:paddingBottom="20dp"
				app:layout_behavior="@string/appbar_scrolling_view_behavior">

			<androidx.constraintlayout.widget.ConstraintLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent">

				<com.google.android.material.card.MaterialCardView
						android:id="@+id/mcv_today_main"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="15dp"
						app:cardCornerRadius="5dp"
						app:cardElevation="1dp"
						app:contentPadding="12dp"
						app:layout_constraintTop_toTopOf="parent">

					<androidx.constraintlayout.widget.ConstraintLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content">

						<androidx.appcompat.widget.AppCompatTextView
								android:id="@+id/tv_title_today_main"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@{@string/str_city_today(vm.liveAQI.city)}"
								android:textColor="@color/colorBlack"
								android:textSize="16sp"
								app:layout_constraintStart_toStartOf="parent"
								app:layout_constraintTop_toTopOf="parent"
								tools:text="北京今日" />

						<androidx.appcompat.widget.AppCompatTextView
								android:id="@+id/tv_desc_today_main"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:text="@{vm.liveAQI.todayDesc}"
								android:textColor="@color/colorPrimaryText"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintTop_toBottomOf="@id/tv_title_today_main"
								tools:text="预计24小时内PM2.5吸入量为128.4微克，沉淀进肺泡无法排出量为85.6微克" />
					</androidx.constraintlayout.widget.ConstraintLayout>

				</com.google.android.material.card.MaterialCardView>

				<com.google.android.material.card.MaterialCardView
						android:id="@+id/mcv_tips_main"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="15dp"
						app:cardCornerRadius="5dp"
						app:cardElevation="1dp"
						app:contentPadding="12dp"
						app:layout_constraintTop_toBottomOf="@id/mcv_today_main">

					<androidx.constraintlayout.widget.ConstraintLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content">

						<androidx.appcompat.widget.AppCompatTextView
								android:id="@+id/tv_title_tips_main"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="温馨提示"
								android:textColor="@color/colorBlack"
								android:textSize="16sp"
								app:layout_constraintStart_toStartOf="parent"
								app:layout_constraintTop_toTopOf="parent" />

						<androidx.appcompat.widget.AppCompatTextView
								android:id="@+id/tv_desc_tips_main"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:text="@{vm.liveAQI.tips}"
								android:textColor="@color/colorPrimaryText"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintTop_toBottomOf="@id/tv_title_tips_main"
								tools:text="空气很好，可以外出活动，呼吸新鲜空气。" />
					</androidx.constraintlayout.widget.ConstraintLayout>

				</com.google.android.material.card.MaterialCardView>

				<com.google.android.material.card.MaterialCardView
						android:id="@+id/mcv_station_main"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="15dp"
						app:cardCornerRadius="5dp"
						app:cardElevation="1dp"
						app:contentPadding="12dp"
						app:layout_constraintTop_toBottomOf="@id/mcv_tips_main">

					<androidx.constraintlayout.widget.ConstraintLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content">

						<androidx.appcompat.widget.AppCompatTextView
								android:id="@+id/tv_title_station_main"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="监测站点"
								android:textColor="@color/colorPrimaryText"
								android:textSize="14sp"
								app:layout_constraintStart_toStartOf="parent"
								app:layout_constraintTop_toTopOf="parent" />

						<androidx.appcompat.widget.AppCompatTextView
								android:id="@+id/tv_title_pm25_main"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="PM2.5(μg/m³)"
								android:textColor="@color/colorPrimaryText"
								android:textSize="14sp"
								app:layout_constraintBaseline_toBaselineOf="@id/tv_title_station_main"
								app:layout_constraintEnd_toStartOf="@id/tv_title_aqi_main"
								app:layout_constraintHorizontal_bias="0.8"
								app:layout_constraintStart_toEndOf="@id/tv_title_station_main" />

						<androidx.appcompat.widget.AppCompatTextView
								android:id="@+id/tv_title_aqi_main"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginEnd="20dp"
								android:text="AQI"
								android:textColor="@color/colorPrimaryText"
								android:textSize="14sp"
								app:layout_constraintBaseline_toBaselineOf="@id/tv_title_station_main"
								app:layout_constraintEnd_toEndOf="parent" />

						<View
								android:id="@+id/v_divider_station_main"
								android:layout_width="match_parent"
								android:layout_height="1dp"
								android:layout_marginTop="10dp"
								android:background="@color/colorDivider"
								app:layout_constraintTop_toBottomOf="@id/tv_title_station_main" />

						<androidx.recyclerview.widget.RecyclerView
								android:id="@+id/rv_station_main"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="vertical"
								android:overScrollMode="never"
								android:paddingTop="10dp"
								app:adapter="@{adapter}"
								app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
								app:layout_constraintBottom_toBottomOf="parent"
								app:layout_constraintTop_toBottomOf="@id/v_divider_station_main"
								tools:listitem="@layout/item_rv_station_main" />
					</androidx.constraintlayout.widget.ConstraintLayout>

				</com.google.android.material.card.MaterialCardView>

			</androidx.constraintlayout.widget.ConstraintLayout>
		</androidx.core.widget.NestedScrollView>

	</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>